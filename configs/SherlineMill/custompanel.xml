<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
<!-- 
Include your PyVCP panel here.
The contents of this file will not be overwritten when you run stepconf again.
-->

 <labelframe text="Zero Axes">
    <font>("Helvetica",16)</font>
	<button>
	     <halpin>"o100"</halpin>
	     <text>"Zero X Axis"</text>
	     <font>('fixed',10)</font>
	</button>

	<button>
	     <halpin>"o101"</halpin>
	     <text>"Zero Y Axis"</text>
	     <font>('fixed',10)</font>
	</button>

	<button>
	     <halpin>"o102"</halpin>
	     <text>"Zero Z Axis"</text>
	     <font>('fixed',10)</font>
	</button>

	<button>
	     <halpin>"o103"</halpin>
	     <text>"Zero A Axis"</text>
	     <font>('fixed',10)</font>
	</button>
</labelframe>


 <labelframe text="Jog Buttons">
    <font>("Helvetica",16)</font>

      <!-- the X jog buttons -->
      <hbox>
      <relief>RAISED</relief>
      <bd>3</bd>
      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"x-minus"</halpin>
        <text>"X-"</text>
      </button>
      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"x-plus"</halpin>
        <text>"X+"</text>
      </button>
      </hbox>

      <!-- the Y jog buttons -->
      <hbox>
      <relief>RAISED</relief>
      <bd>3</bd>
      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"y-minus"</halpin>
        <text>"Y-"</text>
      </button>
      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"y-plus"</halpin>
        <text>"Y+"</text>
      </button>
      </hbox>

      <!-- the Z jog buttons -->
      <hbox>
      <relief>RAISED</relief>
      <bd>3</bd>
      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"z-minus"</halpin>
        <text>"Z-"</text>
      </button>
      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"z-plus"</halpin>
        <text>"Z+"</text>
      </button>
      </hbox>

      <!-- the A jog buttons -->
      <hbox>
      <relief>RAISED</relief>
      <bd>3</bd>

      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"a-minus"</halpin>
        <text>"A-"</text>
      </button>
      <button>
        <font>("Helvetica",20)</font>
        <width>3</width>
        <halpin>"a-plus"</halpin>
        <text>"A+"</text>
      </button>
      </hbox>

      <!-- the jog speed slider -->
      <vbox>
      <relief>RAISED</relief>
      <bd>3</bd>
      <label>
        <text>"Jog Speed"</text>
        <font>("Helvetica",16)</font>
      </label>
      <scale>
        <font>("Helvetica",14)</font>
        <halpin>"jog-speed"</halpin>
        <resolution>1</resolution>
        <orient>HORIZONTAL</orient>
        <min_>0</min_>
        <max_>200</max_>
      </scale>
      </vbox>
  </labelframe>

<button>
     	<halpin>"o104"</halpin>
     	<text>"Set Z to 3.96"</text>
     	<font>('fixed',10)</font>
</button>



</pyvcp>
